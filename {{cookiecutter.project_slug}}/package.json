{
  "name": "@netlify/{{cookiecutter.project_slug}}",
  "private": true,
  "version": "{{cookiecutter.project_version}}",
  "description": "{{cookiecutter.project_description}}",
  "type": "module",
  "main": "./dist/main.js",
  "exports": "./dist/main.js",
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts"
  ],
  "scripts": {
    "clean": "rimraf ./dist/",
    "build": "tsc",
    "prepare": "is-ci || husky install node_modules/@netlify/eslint-config-node/.husky/",
    "prepack": "run-s clean build",
    "test": "run-s format test:dev",
    "format": "run-s format:check-fix:*",
    "format:ci": "run-s format:check:*",
    "format:check-fix:lint": "run-e format:check:lint format:fix:lint",
    "format:check:lint": "cross-env-shell eslint $npm_package_config_eslint",
    "format:fix:lint": "cross-env-shell eslint --fix $npm_package_config_eslint",
    "format:check-fix:prettier": "run-e format:check:prettier format:fix:prettier",
    "format:check:prettier": "cross-env-shell prettier --check $npm_package_config_prettier",
    "format:fix:prettier": "cross-env-shell prettier --write $npm_package_config_prettier",
    "test:dev": "run-s test:dev:*",
    "test:ci": "run-s test:ci:*",
    "test:dev:ava": "vitest run",
    "test:ci:ava": "vitest run --coverage"
  },
  "config": {
    "eslint": "--report-unused-disable-directives --ignore-path .gitignore --cache --format=codeframe --max-warnings=0 \"{src,scripts,.github}/**/*.{js,ts,md,html}\" \"*.{js,ts,md,html}\" \".*.{js,ts,md,html}\"",
    "prettier": "--ignore-path .gitignore --loglevel=warn \"{src,scripts,.github}/**/*.{js,ts,md,yml,json,html}\" \"*.{js,ts,yml,json,html}\" \".*.{js,ts,yml,json,html}\" \"!**/package-lock.json\" \"!package-lock.json\""
  },
  "keywords": [],
  "license": "MIT",
  "repository": "netlify/{{cookiecutter.project_slug}}",
  "bugs": {
    "url": "https://github.com/netlify/{{cookiecutter.project_slug}}/issues"
  },
  "author": "Netlify Inc.",
  "directories": {
    "test": "test"
  },
  "devDependencies": {
    "@commitlint/cli": "17.6.5",
    "@commitlint/config-conventional": "17.6.5",
    "@netlify/eslint-config-node": "7.0.1",
    "@vitest/coverage-v8": "0.32.0",
    "husky": "8.0.3",
    "is-ci": "3.0.1",
    "rimraf": "5.0.1",
    "typescript": "5.1.3",
    "vitest": "0.32.0"
  },
  "engines": {
    "node": "^14.18.0 || >=16.0.0"
  }
}
